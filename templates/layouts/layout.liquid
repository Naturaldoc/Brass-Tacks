    <body>
    
        <div class="page">
        
        	<header class="header-Base">
            	{% include "header" %}
            	{% include "navigation" %}
        	</header>
        	
            <main class="base-Content">
            	{% block content %}{% endblock %}
            </main>
            
            <footer class="footer-Base">
            	{% include "footer" %}
            </footer>
            
        </div> <!-- end .page -->
        
        <!-- scripts -->
        {{ "jquery-1.10.1.min.js" | asset_url | script_tag }}
        {{ "app.js" | asset_url | script_tag }}
